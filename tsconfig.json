{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".", 
    "outDir": "dist",
    "target": "es5",
    "module": "commonjs",
    "strict": true,
    "lib": [
      "es2015",
      "dom"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "paths": {
      "@src/*": ["src/*"]
    },
    "removeComments": true,
  }
}